{
  "name": "@beckybot/monorepo",
  "version": "0.0.4",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "workspaces": [
    "db-init",
    "backend",
    "frontend"
  ],
  "scripts": {
    "test": "npm run cucumber",
    "cucumber": "NODE_OPTIONS=\"--loader ts-node/esm --experimental-specifier-resolution=node\" cucumber-js",
    "cucumber:http": "DB_HOST=localhost REDIS_HOST=localhost npm run build --workspace=frontend && NODE_OPTIONS=\"--loader ts-node/esm --experimental-specifier-resolution=node\" cucumber-js --profile http",
    "cucumber:dom": "NODE_OPTIONS=\"--loader ts-node/esm --experimental-specifier-resolution=node\" cucumber-js --profile dom",
    "cucumber:dom-http": "NODE_OPTIONS=\"--loader ts-node/esm --experimental-specifier-resolution=node\" cucumber-js --profile dom_http"
  },
  "engines": {
    "npm": ">=7.3.0",
    "yarn": "please-use-npm"
  },
  "dependencies": {
    "mysql": "^2.18.1",
    "redis": "^3.1.0"
  },
  "devDependencies": {
    "@cucumber/screenplay": "^5.2.0",
    "polka": "^0.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
